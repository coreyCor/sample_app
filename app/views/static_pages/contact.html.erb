<%= flash[:notice] %>

  

  <p class="contact-info">1800-323-3443 <span class="glyphicon glyphicon-phone" id="glyph"></span><br>
  Berlin-bikes1.com  <span class="glyphicon glyphicon-envelope" id="glyph"></span><br>
  12343 5th street<br>
  Orange Ca, 99832 <span class="glyphicon glyphicon-globe" id="glyph"></span></p>
  
  
  <%= form_tag("/static_pages/thank_you") do %>
<div class="row">
  <div class="col-md-12 col-xs-12">
    <div class="form-group"> 
      <%= label_tag :name %>
      <%= text_field :name, nil, class: "form-control",  placeholder: "Enter your name" %>
    </div>
    <div class="form-group">
     <%=label_tag :email %>
     <%=text_field_tag :email, nil, class: "form-control", :required => true, placeholder: "abc@zyx.com"%> 
    </div>
   <div class="form-group">
     <%=label_tag :message %>
    <%=text_area_tag :message, nil, rows: 3, class: "form-control", :required => true, placeholder: "Enter a message" %>
   </div>

  <%=submit_tag "Send", class:"btn btn-danger" %>

  </div>
</div>
</div>
<% end %>
</div>