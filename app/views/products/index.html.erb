<p id="notice"><%= notice %></p>

<h1 id="product-header">Products</h1>
<div class="new-product-link">
<%= link_to 'Add a New Product', new_product_path %>
</div>

<table>
  <thead>
    <tr>
      <th class="th-on-productspage">Name</th>
      <th class="th-on-productspage">Description</th>
      <th class="th-on-productspage">Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="new-product-link">
<%= link_to 'Add a New Product', new_product_path %>
</div>
<br>

