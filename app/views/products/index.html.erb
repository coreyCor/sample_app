<div class="jumbotron">
    <p class="j-t-par"> Honest Abe's Bikes</p>
  </div>


<div class="row">
  <% @products.each do |product| %>
  <div class="col-xs-12 col-md-3">
    <div class="thumbnail">
        <h3 class="product-name"><%= product.name %></h3>
      <%= image_tag(product.image_url, class: "img-responsive thumbnail-img") %>
      <div class= "product-price">
      <%= product.price %> $
      </div>
      <div class="caption">
        <p class="description-par"><%= product.description %><br>
      <div class="showpage-links">
       <%= link_to 'View', product %>
       <%= link_to 'Edit', edit_product_path(product) %>
       <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
      </div>

    </div>
  </div>
 <% end %>
</div>
<div class="new-product-link"><%= link_to 'New Product', new_product_path %></div>


