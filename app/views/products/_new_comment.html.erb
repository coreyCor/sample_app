<% if signed_in? %>
  <h4 class="cent-text">Add a Review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
  <p>
    <%= f.label :body, 'Comments' %><br>
    <%= f.text_area :body, class: "comment-text-area" %>
  </p>

  <p>
    
    <%= f.label :rating %><br>
  </p> 
  <div class="rating"></div>
  <br>
  <p>
   <%= f.submit 'submit' %>
  </p>
   <% end %>
<% end %>
      